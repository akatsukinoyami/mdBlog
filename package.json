{
  "name": "mdblog-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "rollup -c -w",
    "check": "svelte-check --tsconfig ./tsconfig.json",

    "archive:delete": "rm -f blog.tar.gz",
    "archive:create": "tar czf blog.tar.gz public captain-definition Dockerfile nginx.conf",

    "fix:permissions": "chown -R $USER public/blog public/page && chmod -R 744 public/blog public/page",
    "generate:mdlist": "node ./scripts/inspectMdFiles.js",
    "generate:rss": "node ./scripts/generateRssFeed.js",

    "build": "yarn fix:permissions && yarn generate:mdlist && yarn generate:rss && yarn check && rollup -c",
    "build:prod": "yarn archive:delete && yarn build && yarn archive:create",

    "start": "yarn build && docker-compose up",
    "start:recreate": "yarn start --build --force-recreate"
  },
  "devDependencies": {
    "@popperjs/core": "^2.11.6",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "@types/highlightjs": "^9.12.2",
    "@types/markdown-it": "^12.2.3",
    "@types/showdown": "^2.0.0",
    "bootstrap": "^5.3.0-alpha1",
    "bootstrap-icons": "^1.9.1",
    "directory-tree": "^3.3.1",
    "highlight": "^0.2.4",
    "rollup": "^2.3.4",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.55.0",
    "showdown": "^2.1.0",
    "sirv-cli": "^2.0.0",
    "svelte": "^3.52.0",
    "svelte-check": "^2.0.0",
    "svelte-navigator": "^3.2.2",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "turndown": "^7.1.1",
    "typescript": "^4.0.0",
    "yarn": "^1.22.19"
  },
  "dependencies": {}
}
